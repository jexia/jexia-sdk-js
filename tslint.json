{
    "extends": "tslint:recommended",
    "rules": {
      "object-literal-sort-keys": false,
      "trailing-comma": [
        true,
        {
          "multiline": "always",
          "singleline": "never",
          "esSpecCompliant": true
        }
      ],
      "quotemark": [
        true,
        "double"
      ],
      "array-type": [true, "array-simple"],
      "semicolon": [true, "always"]
    },
    "linterOptions": {
      "exclude": [
        "./extra_docs/*"
      ]
    }
}
