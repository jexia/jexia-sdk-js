{
  "name": "jexia-sdk-js",
  "version": "2.0.1-semantic-release",
  "description": "jexia javascript sdk",
  "main": "index.js",
  "module": "./_esm5/index.js",
  "es2015": "./_esm2015/index.js",
  "typings": "index.d.ts",
  "scripts": {
    "cleanup": "run-p cleanup:*",
    "cleanup:dist": "shx rm -rf dist",
    "cleanup:coverage": "shx rm -rf coverage",
    "cleanup:docs": "shx rm -rf docs",
    "cleanup:temp": "shx rm -rf .temp",
    "cleanup:nyc": "shx rm -rf .nyc_output",
    "commit": "git-cz",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "lint": "tslint \"src/**/*.ts\" \"spec/**/*.ts\"",
    "transpile": "npm run cleanup && tsc",
    "test": "npm run transpile && nyc jasmine",
    "test-simple": "tsc && jasmine || true",
    "tdd": "nodemon -e ts -w *.ts --exec npm run test-simple",
    "test:coverage": "npm run test && nyc report --reporter=html && opn coverage/index.html",
    "tsnode": "ts-node",
    "compodoc": "compodoc",
    "docs": "npm run cleanup:docs && npm run compodoc -- src/api -p tsconfig.json --disablePrivateOrInternalSupport --disableCoverage --disableSourceCode --name \"Jexia Javascript SDK\" --output docs --includes extra_docs",
    "build": "npm-run-all cleanup:dist -p build:*",
    "build:main": "tsc -p ./build/tsconfig.main.json",
    "build:module": "tsc -p ./build/tsconfig.module.json",
    "build:es2015": "tsc -p ./build/tsconfig.es2015.json",
    "build:bundle": "webpack --config build/webpack.config.js",
    "build:package": "shx mkdir -p ./dist && shx cp package.json ./dist/package.json",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jexia-com/jexia-sdk-js.git"
  },
  "author": "jexia.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jexia-com/jexia-sdk-js/issues"
  },
  "homepage": "https://github.com/jexia-com/jexia-sdk-js#readme",
  "devDependencies": {
    "@commitlint/cli": "^5.2.8",
    "@commitlint/config-conventional": "^5.2.3",
    "@compodoc/compodoc": "^1.0.0-beta.14",
    "@semantic-release/git": "^2.0.1",
    "@semantic-release/npm": "^2.6.1",
    "@types/jasmine": "^2.8.3",
    "@types/node": "^7.0.18",
    "@types/node-fetch": "1.6.7",
    "@types/ws": "^3.0.2",
    "commitizen": "^2.9.6",
    "condition-circle": "2.0.1",
    "cz-conventional-changelog": "2.1.0",
    "husky": "^0.14.3",
    "jasmine": "^2.8.0",
    "node-fetch": "^1.6.3",
    "nodemon": "^1.14.11",
    "npm-run-all": "^4.1.2",
    "nyc": "^10.3.2",
    "opn-cli": "^3.1.0",
    "semantic-release": "12.2.0",
    "shx": "^0.2.2",
    "ts-loader": "^2.0.3",
    "ts-node": "^2.1.0",
    "tslint": "^4.5.1",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.6.2",
    "uglifyjs-webpack-plugin": "^1.1.5",
    "webpack": "^2.4.1",
    "ws": "^3.1.0"
  },
  "release": {
    "branch": "develop",
    "verifyConditions": "condition-circle",
    "publish": [
      {
        "path": "@semantic-release/npm",
        "pkgRoot": "dist"
      },
      "@semantic-release/git"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
